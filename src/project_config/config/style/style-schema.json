{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": ["rules"],
    "additionalProperties": false,
    "properties": {
        "rules": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["files"],
                "properties": {
                    "files": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    },
                    "allMatch": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    },
                    "anyMatch": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "plugins": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        }
    }
}
