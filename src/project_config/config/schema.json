{
    "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "required": ["style"],
    "additionalProperties": false,
    "properties": {
        "style": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "cache": {
            "type": "string",
            "pattern": "^(\\d+ (minutes?)|(hours?)|(days?)|(weeks?))|(never)",
            "default": "5 minutes"
        }
    }
}
